<div id="loading">
  <div class="ripple">
    <div></div>
    <div></div>
  </div>
</div>
<style type="text/css">
  @keyframes ripple {
    0% {
      top: 46px;
      left: 46px;
      width: 8px;
      height: 8px;
      opacity: 1;
    }
    100% {
      top: 0px;
      left: 0px;
      width: 100px;
      height: 100px;
      opacity: 0;
    }
  }

  #loading {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10;
    background-color: #fbfbf6;
    opacity: 1;
    transition: opacity 500ms;
  }
  #loading .ripple {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -50px;
    margin-left: -50px;
    width: 100px;
    height: 100px;
  }
  #loading .ripple div {
    position: absolute;
    border: 4px solid #deded7;
    border-radius: 50%;
    animation: ripple 3s cubic-bezier(0, 0.2, 0.8, 1) infinite;
  }
  #loading .ripple div:nth-child(2) { animation-delay: -1.5s; }

  body.loaded #loading { opacity: 0; pointer-events: none }
</style>
<script>
  window.addEventListener('load', function() {
    document.body.classList.add('loaded');
  });
</script>
